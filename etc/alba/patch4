#--------------------------------------
# reset
I
#--------------------------------------
# wait for EOC
C
#--------------------------------------
# read status to clear POR flag
R,0x00
#--------------------------------------
# set standby mode
W,0x01,0x0148
#--------------------------------------
# write CHANNEL_0 [p.88] with:-
#   ENABLE = (0x01 << 15) = 0x8000,
#   SETUP  = (0x00 << 12) = 0x0000,
#   AINP   = (0x0C << 5)  = 0x0180 (decimal 12) pin Ain12,
#   AINM   = (0x11 << 0)  = 0x0011 (decimal 17) Avss.
W,0x09,0x8191
#--------------------------------------
# write CONFIG_0 [p.90] with:-
#   REFIN1   = (0x00 << 3)  = 0x0000
#   PGA Gain = 0            = 0x0000
W,0x19,0x0000
#--------------------------------------
# write FILTER_0 [p.91] with
#   POST_FILTER = (0x03 << 17) = 0x060000,
#   FS          = (0x780 << 0) = 0x000780 (decimal 1920)
W,0x21,0x060780
#--------------------------------------
# perform internal zero scale calibration
W,0x01,0x0154
#--------------------------------------
# wait for EOC
C
#--------------------------------------
# set standby mode
W,0x01,0x0148
#--------------------------------------
# set egor count to 20 iterations
L,20
#--------------------------------------
# set egor display mode to 33
V,33
#--------------------------------------
# set egor out to 4 - OSTREAM@GATEWAY
O,4
#--------------------------------------

